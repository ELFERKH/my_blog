{% extends "home.html.twig" %}

{% block body %}
	<div class="container">
		{% for post in posts|batch(4) %}
			<div class="row">
				{% for column in post %}
					<div class="card col-sm-3">
						<h3 class="card-header">{{ column.titre }}</h3>
						<div class="card-body"></div>
						<svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveaspectratio="xMidYMid slice" viewbox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
							<rect width="100%" height="100%" fill="#868e96"></rect>
							<text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
						</svg>
						<div class="card-body">
							<p class="card-text">{{ column.description }}</p>
						</div>
						<div class="card-body">
							<button type="button" class="btn btn-outline-primary">
								<a href="{{ path('app_post_edit', {'id': column.id}) }}" class="card-link">edit</a>
							</button>
							{{ include('post/_delete_form.html.twig') }}
						</div>
						<div class="card-footer text-muted">
							<td>{{ column.datePublication ? column.datePublication|date('Y-m-d H:i:s') : '' }}</td>
						</div>
					</div>
				{% endfor %}
			</div>
		{% else %}
			<span>no records found</span>
		{% endfor %}


		<a href="{{ path('app_post_new') }}">Create new</a>
	</div>
{% endblock %}
