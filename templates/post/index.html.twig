{% extends "home.html.twig" %}

{% block body %}
	<h1>Post index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Titre</th>
				<th>Description</th>
				<th>Image</th>
				<th>DatePublication</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for post in posts %}
				<tr>
					<td>{{ post.titre }}</td>
					<td>{{ post.description }}</td>
					<td>{{ post.image }}</td>
					<td>{{ post.datePublication ? post.datePublication|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_post_show', {'id': post.id}) }}">show</a>
						<a href="{{ path('app_post_edit', {'id': post.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_post_new') }}">Create new</a>
{% endblock %}
