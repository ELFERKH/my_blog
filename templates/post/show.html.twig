{% extends "home.html.twig" %}

{% block body %}
	<h1>Post</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ post.id }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ post.titre }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ post.description }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>{{ post.image }}</td>
			</tr>
			<tr>
				<th>DatePublication</th>
				<td>{{ post.datePublication ? post.datePublication|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_post_index') }}">back to list</a>

	<a href="{{ path('app_post_edit', {'id': post.id}) }}">edit</a>

	{{ include('post/_delete_form.html.twig') }}
{% endblock %}
